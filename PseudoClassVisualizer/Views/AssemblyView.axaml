<UserControl
    x:Class="PseudoClassVisualizer.Views.AssemblyView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:PseudoClassVisualizer.Views"
    xmlns:vm="using:PseudoClassVisualizer.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:AssemblyViewModel />
    </Design.DataContext>
    <Grid RowDefinitions="Auto, *">
        <TextBlock Grid.Row="0" Text="{Binding AssemblyName}" />
        <ListBox Grid.Row="1" Items="{Binding Types}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="vm:TypeViewModel">
                    <views:TypeView DataContext="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
